{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Implementação do https://www.tabnews.com.br para o curso https://curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up &&next dev",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "migration:create": "node-pg-migrate -m infra/database/migrations create",
    "migratetion:up": "node-pg-migrate -m infra/database/migrations --envPath .env.development up",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.4",
    "dotenv-expand": "^11.0.6",
    "lucide-react": "^0.552.0",
    "next": "^13.1.6",
    "node-pg-migrate": "^6.2.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "jest": "^29.6.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18"
  }
}
